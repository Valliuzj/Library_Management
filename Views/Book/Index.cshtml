@model IEnumerable<LibraryManagement.Models.Book>

<h2>Books Index</h2>
<a href="@Url.Action("Create","Book")" class="btn btn-primary">Add New Book</a>

<table class="table">
    <thead>
        <tr>
            <th>Book ID</th>
            <th>Title</th>
            <th>Author ID</th>
            <th>Library Branch ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.BookId</td>
            <td>@book.Title</td>
            <td>@book.AuthorId</td>
            <td>@book.LibraryBranchId</td>
            <td>
                <a href="@Url.Action("Edit", "Book", new { id = book.BookId })" class="btn btn-info">Edit</a> |
                <a href="@Url.Action("Delete", "Book", new { id = book.BookId })" class="btn btn-info">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>